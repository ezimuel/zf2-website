<? if (! empty($this->feed)): 
    $i = 0;                              ?>
	<ul>
    <? foreach ($this->feed as $item): 
        $class = '';
        if ($i == 1) $class = ' class="last"'; ?>
        <li<?= $class ?>><a href="<?= $this->escape($item->link()) ?>" target="_blank"><?= $item->title() ?></a></li>
    <? if (++$i > 1) break; endforeach; ?>
	</ul>
<? endif ?>
